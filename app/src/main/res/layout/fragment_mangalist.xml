<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.mvvmdemo.mangalist.MangaListViewModel" />
    </data>
    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/manga_list"
        android:name="com.mvvmdemo.mangalist.MangaListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:items="@{viewmodel.items}"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:context="com.mvvmdemo.mangalist.MangaListFragment"
        tools:listitem="@layout/fragment_mangalist" />

</layout>
